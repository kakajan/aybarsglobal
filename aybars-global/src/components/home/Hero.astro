---
import { companyInfo } from '@/data/company'
import {
  type Language,
  getTranslations,
  defaultLang,
  getLocalizedPath,
} from '@/i18n'

interface Props {
  lang?: Language
}

const { lang = defaultLang } = Astro.props
const t = getTranslations(lang)
---

<section
  class="relative min-h-[90vh] flex items-center overflow-hidden bg-hero"
>
  <!-- Background Image -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style="background-image: url('/images/SkyLand-blue.webp');"
  >
  </div>

  <!-- Background Overlay -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-primary-900/95 via-primary-800/90 to-primary-700/85"
  >
  </div>

  <!-- Animated Background Pattern -->
  <div class="absolute inset-0 opacity-5 bg-pattern"></div>

  <!-- Floating Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-20 left-10 w-64 h-64 bg-accent-500/10 rounded-full blur-3xl animate-float"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-primary-400/10 rounded-full blur-3xl animate-float"
      style="animation-delay: 2s;"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/3 w-48 h-48 bg-accent-400/5 rounded-full blur-2xl animate-float"
      style="animation-delay: 4s;"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="container-custom relative z-10 py-20 lg:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left rtl:lg:text-right">
        <!-- Badge -->
        <div
          class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full
                    text-accent-400 text-sm font-medium mb-6 animate-fade-in"
        >
          <span
            class="w-2 h-2 bg-accent-400 rounded-full mr-2 rtl:mr-0 rtl:ml-2 animate-pulse"
          ></span>
          {t.hero.badge}
        </div>

        <!-- Main Heading -->
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6 animate-fade-in-up"
        >
          {t.hero.title}
          <span class="text-accent-400"> {t.hero.titleHighlight}</span>
        </h1>

        <!-- Subheading -->
        <p
          class="text-lg md:text-xl text-gray-300 leading-relaxed mb-8 max-w-2xl mx-auto lg:mx-0 rtl:lg:mr-0 animate-fade-in-up animate-delay-200"
        >
          {t.hero.subtitle}
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start rtl:lg:justify-start animate-fade-in-up animate-delay-300"
        >
          <a
            href={getLocalizedPath('/services', lang)}
            class="btn-accent btn-lg group"
          >
            {t.hero.cta.services}
            <svg
              class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform rtl:rotate-180 rtl:mr-2 rtl:ml-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a
            href={getLocalizedPath('/contact', lang)}
            class="btn bg-white/10 backdrop-blur-sm text-white border border-white/30
                                    hover:bg-white hover:text-primary-900 btn-lg"
          >
            {t.hero.cta.contact}
          </a>
        </div>

        <!-- Trust Indicators -->
        <div
          class="mt-12 pt-8 border-t border-white/10 animate-fade-in-up animate-delay-400"
        >
          <p class="text-gray-400 text-sm mb-4">
            {t.hero.trusted}
          </p>
          <div
            class="flex flex-wrap justify-center lg:justify-start rtl:lg:justify-start gap-8"
          >
            <div class="text-center">
              <div class="text-2xl md:text-3xl font-bold text-white">
                {t.stats.countries}
              </div>
              <div class="text-xs text-gray-400 uppercase tracking-wider">
                {t.stats.countriesLabel}
              </div>
            </div>
            <div class="text-center">
              <div class="text-2xl md:text-3xl font-bold text-white">
                {t.stats.products}
              </div>
              <div class="text-xs text-gray-400 uppercase tracking-wider">
                {t.stats.productsLabel}
              </div>
            </div>
            <div class="text-center">
              <div class="text-2xl md:text-3xl font-bold text-white">
                {t.stats.partners}
              </div>
              <div class="text-xs text-gray-400 uppercase tracking-wider">
                {t.stats.partnersLabel}
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Hero Visual -->
      <div
        class="hidden lg:block relative animate-fade-in-up animate-delay-200"
      >
        <div class="relative">
          <!-- Main Card -->
          <div
            class="bg-white/10 backdrop-blur-lg rounded-3xl p-8 border border-white/20"
          >
            <div class="grid grid-cols-2 gap-4">
              <!-- Service Previews -->
              <div
                class="bg-white/5 rounded-2xl p-6 hover:bg-white/10 transition-colors"
              >
                <div
                  class="w-12 h-12 bg-accent-500/20 rounded-xl flex items-center justify-center mb-4"
                >
                  <svg
                    class="w-6 h-6 text-accent-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-white font-semibold mb-1">
                  {t.hero.features.logistics}
                </h3>
                <p class="text-gray-400 text-sm">
                  {t.hero.features.logisticsDesc}
                </p>
              </div>

              <div
                class="bg-white/5 rounded-2xl p-6 hover:bg-white/10 transition-colors"
              >
                <div
                  class="w-12 h-12 bg-success-500/20 rounded-xl flex items-center justify-center mb-4"
                >
                  <svg
                    class="w-6 h-6 text-success-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="text-white font-semibold mb-1">
                  {t.hero.features.quality}
                </h3>
                <p class="text-gray-400 text-sm">
                  {t.hero.features.qualityDesc}
                </p>
              </div>

              <div
                class="bg-white/5 rounded-2xl p-6 hover:bg-white/10 transition-colors"
              >
                <div
                  class="w-12 h-12 bg-primary-400/20 rounded-xl flex items-center justify-center mb-4"
                >
                  <svg
                    class="w-6 h-6 text-primary-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h3 class="text-white font-semibold mb-1">
                  {t.hero.features.delivery}
                </h3>
                <p class="text-gray-400 text-sm">
                  {t.hero.features.deliveryDesc}
                </p>
              </div>

              <div
                class="bg-white/5 rounded-2xl p-6 hover:bg-white/10 transition-colors"
              >
                <div
                  class="w-12 h-12 bg-accent-400/20 rounded-xl flex items-center justify-center mb-4"
                >
                  <svg
                    class="w-6 h-6 text-accent-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-white font-semibold mb-1">
                  {t.hero.features.team}
                </h3>
                <p class="text-gray-400 text-sm">{t.hero.features.teamDesc}</p>
              </div>
            </div>
          </div>

          <!-- Decorative Elements -->
          <div
            class="absolute -top-6 -right-6 w-24 h-24 bg-accent-500/20 rounded-full blur-xl"
          >
          </div>
          <div
            class="absolute -bottom-6 -left-6 w-32 h-32 bg-primary-400/20 rounded-full blur-xl"
          >
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <a
      href="#services"
      class="text-white/50 hover:text-white transition-colors"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
