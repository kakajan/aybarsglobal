---
import {
  type Language,
  getTranslations,
  defaultLang,
  getLocalizedPath,
} from '@/i18n'

interface Props {
  lang?: Language
}

const { lang = defaultLang } = Astro.props
const t = getTranslations(lang)

// Icons for main services
const icons = {
  globe: `<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>`,
  grain: `<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
  </svg>`,
  metal: `<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
  </svg>`,
  food: `<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
  </svg>`,
}

// Main services with translations
const mainServices = [
  {
    icon: 'food',
    title: t.sections.sectors.foodTrade,
    description: t.sections.sectors.foodTradeDesc,
    shortTitle: t.sections.sectors.foodTrade,
    slug: 'food-trade',
    features: [t.sections.sectors.foodTradeDesc],
  },
  {
    icon: 'globe',
    title: t.sections.sectors.logistics,
    description: t.sections.sectors.logisticsDesc,
    shortTitle: t.sections.sectors.logistics,
    slug: 'logistics',
    features: [t.sections.sectors.logisticsDesc],
  },
  {
    icon: 'grain',
    title: t.sections.sectors.grains,
    description: t.sections.sectors.grainsDesc,
    shortTitle: t.sections.sectors.grains,
    slug: 'grain-supply',
    features: [t.sections.sectors.grainsDesc],
  },
  {
    icon: 'metal',
    title: t.sections.sectors.metals,
    description: t.sections.sectors.metalsDesc,
    shortTitle: t.sections.sectors.metals,
    slug: 'industrial-metals',
    features: [t.sections.sectors.metalsDesc],
  },
]

const colorClasses = [
  'from-primary-600 to-primary-800',
  'from-success-600 to-success-800',
  'from-accent-600 to-accent-800',
  'from-primary-600 to-primary-800',
]
---

<section class="section-padding bg-white dark:bg-primary-950">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="section-title">
      <span class="section-subtitle">{t.sections.sectors.subtitle}</span>
      <h2
        class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
      >
        {t.sections.sectors.title}
      </h2>
      <p class="text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        {t.sections.sectors.description}
      </p>
    </div>

    <!-- Core Sectors Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-12">
      {
        mainServices.map((service, index) => (
          <div class="group relative bg-gray-50 dark:bg-primary-900 rounded-2xl p-6 hover:shadow-lg transition-all duration-300">
            <div
              class={`w-14 h-14 rounded-2xl bg-gradient-to-br ${colorClasses[index]} flex items-center justify-center text-white mb-4`}
            >
              <div class="w-7 h-7">
                <Fragment
                  set:html={icons[service.icon as keyof typeof icons]}
                />
              </div>
            </div>

            <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-2 group-hover:text-accent-500 transition-colors">
              {service.title}
            </h3>

            <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
              {service.description}
            </p>

            <a
              href={getLocalizedPath(`/services/${service.slug}`, lang)}
              class="inline-flex items-center text-accent-500 font-medium hover:text-accent-600 transition-colors text-sm"
            >
              {t.sections.services.learnMore}
              <svg
                class="w-4 h-4 ml-1 rtl:mr-1 rtl:ml-0 group-hover:translate-x-1 rtl:group-hover:-translate-x-1 transition-transform rtl:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
