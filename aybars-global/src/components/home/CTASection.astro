---
import { companyInfo } from '@/data/company'
import {
  type Language,
  getTranslations,
  defaultLang,
  getLocalizedPath,
} from '@/i18n'

interface Props {
  lang?: Language
}

const { lang = defaultLang } = Astro.props
const t = getTranslations(lang)
---

<section class="relative py-20 md:py-28 overflow-hidden">
  <!-- Background -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
  </div>
  <div class="absolute inset-0 bg-pattern opacity-5"></div>

  <!-- Decorative Elements -->
  <div
    class="absolute top-0 right-0 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl rtl:right-auto rtl:left-0"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-96 h-96 bg-primary-400/10 rounded-full blur-3xl rtl:left-auto rtl:right-0"
  >
  </div>

  <div class="container-custom relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Icon -->
      <div
        class="w-16 h-16 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center mx-auto mb-8"
      >
        <svg
          class="w-8 h-8 text-accent-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
      </div>

      <!-- Heading -->
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
        {t.sections.cta.title}
        <span class="text-accent-400">{t.sections.cta.titleHighlight}</span>
      </h2>

      <!-- Description -->
      <p class="text-lg md:text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
        {t.sections.cta.description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={getLocalizedPath('/contact', lang)}
          class="btn-accent btn-lg group"
        >
          {t.sections.cta.primary}
          <svg
            class="w-5 h-5 ml-2 rtl:mr-2 rtl:ml-0 group-hover:translate-x-1 rtl:group-hover:-translate-x-1 transition-transform rtl:rotate-180"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a
          href={getLocalizedPath('/services', lang)}
          class="btn bg-white/10 backdrop-blur-sm text-white border border-white/30
                                   hover:bg-white hover:text-primary-900 btn-lg"
        >
          {t.sections.cta.secondary}
        </a>
      </div>

      <!-- Contact Info -->
      <div class="mt-12 pt-8 border-t border-white/10">
        <div class="flex flex-wrap justify-center gap-8 md:gap-12">
          <a
            href={`tel:${companyInfo.contact.phones[0].replace(/\s/g, '')}`}
            class="flex items-center gap-3 text-gray-300 hover:text-white transition-colors"
          >
            <svg
              class="w-5 h-5 text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <span class="ltr-nums" dir="ltr"
              >{companyInfo.contact.phones[0]}</span
            >
          </a>
          <a
            href={`mailto:${companyInfo.contact.emails[0]}`}
            class="flex items-center gap-3 text-gray-300 hover:text-white transition-colors"
          >
            <svg
              class="w-5 h-5 text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span class="ltr-nums" dir="ltr"
              >{companyInfo.contact.emails[0]}</span
            >
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
