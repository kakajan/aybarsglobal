---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { defaultLang, getTranslations } from '@/i18n'

const lang = defaultLang
const t = getTranslations(lang)
---

<BaseLayout
  title={t.policies.privacy.pageTitle}
  description={t.policies.privacy.pageDescription}
  lang={lang}
>
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-accent-400 text-sm font-medium mb-6"
        >
          {t.policies.privacy.hero.badge}
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.policies.privacy.hero.title}
        </h1>
        <p class="text-xl text-gray-300">
          {t.policies.privacy.hero.description}
        </p>
      </div>
    </div>
  </section>

  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="max-w-3xl">
        <div class="prose prose-lg text-gray-600 dark:text-gray-400 space-y-4">
          {t.policies.privacy.content.map((paragraph) => <p>{paragraph}</p>)}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
