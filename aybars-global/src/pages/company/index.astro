---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CTASection from '@/components/home/CTASection.astro'
import { companyInfo, coreValues } from '@/data/company'
import { defaultLang, getTranslations, getLocalizedPath } from '@/i18n'

const lang = defaultLang
const t = getTranslations(lang)
const localizedHref = (path: string) => getLocalizedPath(path, lang)

// Get timeline from translations
const timeline = t.company.timeline.events
---

<BaseLayout
  title={t.company.pageTitle}
  description={t.company.pageDescription}
  jsonLdType="LocalBusiness"
  lang={lang}
>
  <!-- Page Header -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-accent-400 text-sm font-medium mb-6"
        >
          {t.company.hero.badge}
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.company.hero.title}
        </h1>
        <p class="text-xl text-gray-300">
          {t.company.hero.tagline}
        </p>
      </div>
    </div>
  </section>

  <!-- Company Overview -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="section-subtitle">{t.company.overview.subtitle}</span>
          <h2
            class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-6"
          >
            {t.company.overview.title}
          </h2>
          <div
            class="prose prose-lg text-gray-600 dark:text-gray-400 space-y-4"
          >
            <p>{t.about.story.description1}</p>
            <p>{t.about.story.description2}</p>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 gap-4">
          {
            companyInfo.stats.map((stat) => (
              <div class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-800 dark:to-primary-900 rounded-2xl p-6 text-center">
                <div class="text-4xl font-bold text-accent-500">
                  {stat.number}
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                  {stat.label}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="section-padding bg-gray-50 dark:bg-primary-900">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.company.timeline.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.company.timeline.title}
        </h2>
      </div>

      <div class="max-w-3xl mx-auto mt-12">
        {
          timeline.map((item: any, index: number) => (
            <div class="timeline-item">
              <div class="timeline-dot" />
              <div class="bg-white dark:bg-primary-800 rounded-xl p-6 shadow-soft dark:shadow-none dark:border dark:border-primary-700 ms-4">
                <div class="flex items-center gap-4 mb-3">
                  <span class="text-2xl font-bold text-accent-500 ltr-nums">
                    {item.year}
                  </span>
                  <span class="text-lg font-semibold text-primary-900 dark:text-white">
                    {item.title}
                  </span>
                </div>
                <p class="text-gray-600 dark:text-gray-400">
                  {item.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.company.values.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.company.values.title}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
        {
          coreValues.map((value) => (
            <div class="p-6 border border-gray-100 dark:border-primary-700 dark:bg-primary-800 rounded-2xl hover:border-accent-200 dark:hover:border-accent-600 hover:shadow-lg transition-all">
              <div class="w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center mb-4">
                <svg
                  class="w-6 h-6 text-accent-600 dark:text-accent-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>
              <h4 class="text-lg font-bold text-primary-900 dark:text-white mb-2">
                {value.title}
              </h4>
              <p class="text-gray-600 dark:text-gray-400 text-sm">
                {value.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Global Presence -->
  <section class="section-padding bg-primary-900">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span
          class="text-accent-400 font-semibold uppercase tracking-wider text-sm"
          >Global Network</span
        >
        <h2 class="text-3xl md:text-4xl font-bold text-white mt-3">
          Headquarters & Contact
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6">
          <div
            class="w-12 h-12 bg-accent-500/20 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Address</h3>
          <p class="text-gray-300 text-sm">
            {companyInfo.contact.address.full}
          </p>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6">
          <div
            class="w-12 h-12 bg-accent-500/20 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Phone</h3>
          {
            companyInfo.contact.phones.map((phone) => (
              <p class="text-gray-300 text-sm text-left" dir="ltr">
                <a
                  href={`tel:${phone.replace(/\s/g, '')}`}
                  class="hover:text-accent-400 ltr-nums"
                >
                  {phone}
                </a>
              </p>
            ))
          }
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6">
          <div
            class="w-12 h-12 bg-accent-500/20 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Email</h3>
          {
            companyInfo.contact.emails.map((email) => (
              <p class="text-gray-300 text-sm text-left" dir="ltr">
                <a href={`mailto:${email}`} class="hover:text-accent-400">
                  {email}
                </a>
              </p>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection />
</BaseLayout>
