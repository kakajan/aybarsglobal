---
/**
 * Dynamic language route for homepage
 * Handles: /tr/, /ar/, /fa/, /ru/
 * English (default) is handled by /index.astro
 */
import BaseLayout from '@/layouts/BaseLayout.astro'
import Hero from '@/components/home/Hero.astro'
import ServiceCards from '@/components/home/ServiceCards.astro'
import CoreSectors from '@/components/home/CoreSectors.astro'
import AboutSection from '@/components/home/AboutSection.astro'
import CTASection from '@/components/home/CTASection.astro'
import {
  type Language,
  supportedLanguages,
  defaultLang,
  getTranslations,
} from '@/i18n'

// Generate static paths for all non-default languages
export function getStaticPaths() {
  return supportedLanguages
    .filter((lang) => lang !== defaultLang)
    .map((lang) => ({
      params: { lang },
      props: { lang: lang as Language },
    }))
}

const { lang } = Astro.props
const t = getTranslations(lang)
---

<BaseLayout
  title={t.meta.siteName}
  description={t.meta.siteDescription}
  jsonLdType="Organization"
  lang={lang}
>
  <!-- Hero Section -->
  <Hero lang={lang} />

  <!-- Transport Services Cards -->
  <ServiceCards lang={lang} />

  <!-- Core Sectors (Logistics, Grain, Metals) -->
  <CoreSectors lang={lang} />

  <!-- About Company Section -->
  <AboutSection lang={lang} />

  <!-- Features/Why Choose Us -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.home.whyChoose.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.home.whyChoose.title}
        </h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          {t.home.whyChoose.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
        <!-- Feature 1: Quality Assurance -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-primary-100 dark:bg-primary-800 rounded-xl flex items-center justify-center mb-5 group-hover:bg-primary-900 dark:group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.qualityAssurance}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.excellenceDesc}
          </p>
        </div>

        <!-- Feature 2: Timely Delivery -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-accent-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.timelyDelivery}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.reliabilityDesc}
          </p>
        </div>

        <!-- Feature 3: Global Network -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-green-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-green-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.globalNetwork}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.partnershipDesc}
          </p>
        </div>

        <!-- Feature 4: Competitive Pricing -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-blue-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.competitivePricing}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.integrityDesc}
          </p>
        </div>

        <!-- Feature 5: Dedicated Support -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-purple-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-purple-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.dedicatedSupport}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.partnershipDesc}
          </p>
        </div>

        <!-- Feature 6: Customs Expertise -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-orange-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-orange-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.customsExpertise}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.excellenceDesc}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection lang={lang} />
</BaseLayout>
