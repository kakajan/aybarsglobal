---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CTASection from '@/components/home/CTASection.astro'
import {
  type Language,
  supportedLanguages,
  defaultLang,
  getTranslations,
  getLocalizedPath,
} from '@/i18n'

export function getStaticPaths() {
  return supportedLanguages
    .filter((lang) => lang !== defaultLang)
    .map((lang) => ({
      params: { lang },
      props: { lang: lang as Language },
    }))
}

const { lang } = Astro.props
const t = getTranslations(lang)
const localizedHref = (path: string) => getLocalizedPath(path, lang)
---

<BaseLayout
  title={t.services.pageTitle}
  description={t.services.pageDescription}
  lang={lang}
>
  <!-- Hero Section -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-accent-400 text-sm font-medium mb-6"
        >
          {t.services.hero.badge}
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.services.hero.title}
        </h1>
        <p class="text-xl text-gray-300">{t.services.hero.description}</p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Logistics -->
        <div class="card p-8 group">
          <div
            class="w-16 h-16 bg-primary-100 dark:bg-primary-800 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-primary-900 dark:group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-8 h-8 text-primary-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary-900 dark:text-white mb-4">
            {t.services.logistics.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            {t.services.logistics.fullDescription}
          </p>
          <a
            href={localizedHref('/services/logistics')}
            class="text-accent-500 font-medium hover:text-accent-600 transition-colors inline-flex items-center"
          >
            {t.common.learnMore}
            <svg
              class="w-4 h-4 ms-2 icon-flip"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Grain Supply -->
        <div class="card p-8 group">
          <div
            class="w-16 h-16 bg-accent-100 dark:bg-accent-900/30 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-8 h-8 text-accent-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary-900 dark:text-white mb-4">
            {t.services.grainSupply.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            {t.services.grainSupply.fullDescription}
          </p>
          <a
            href={localizedHref('/services/grain-supply')}
            class="text-accent-500 font-medium hover:text-accent-600 transition-colors inline-flex items-center"
          >
            {t.common.learnMore}
            <svg
              class="w-4 h-4 ms-2 icon-flip"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Industrial Metals -->
        <div class="card p-8 group">
          <div
            class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-green-500 transition-colors"
          >
            <svg
              class="w-8 h-8 text-green-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary-900 dark:text-white mb-4">
            {t.services.industrialMetals.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            {t.services.industrialMetals.fullDescription}
          </p>
          <a
            href={localizedHref('/services/industrial-metals')}
            class="text-accent-500 font-medium hover:text-accent-600 transition-colors inline-flex items-center"
          >
            {t.common.learnMore}
            <svg
              class="w-4 h-4 ms-2 icon-flip"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding bg-gray-50 dark:bg-primary-900">
    <div class="container-custom">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <div class="text-center p-4">
          <div
            class="w-12 h-12 mx-auto bg-primary-100 dark:bg-primary-800 rounded-xl flex items-center justify-center mb-3"
          >
            <svg
              class="w-6 h-6 text-primary-600 dark:text-primary-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <p class="text-sm font-medium text-primary-900 dark:text-white">
            {t.services.features.globalNetwork}
          </p>
        </div>
        <div class="text-center p-4">
          <div
            class="w-12 h-12 mx-auto bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center mb-3"
          >
            <svg
              class="w-6 h-6 text-accent-600 dark:text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <p class="text-sm font-medium text-primary-900 dark:text-white">
            {t.services.features.qualityAssurance}
          </p>
        </div>
        <div class="text-center p-4">
          <div
            class="w-12 h-12 mx-auto bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center mb-3"
          >
            <svg
              class="w-6 h-6 text-green-600 dark:text-green-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <p class="text-sm font-medium text-primary-900 dark:text-white">
            {t.services.features.competitivePricing}
          </p>
        </div>
        <div class="text-center p-4">
          <div
            class="w-12 h-12 mx-auto bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mb-3"
          >
            <svg
              class="w-6 h-6 text-blue-600 dark:text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <p class="text-sm font-medium text-primary-900 dark:text-white">
            {t.services.features.timelyDelivery}
          </p>
        </div>
        <div class="text-center p-4">
          <div
            class="w-12 h-12 mx-auto bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center mb-3"
          >
            <svg
              class="w-6 h-6 text-purple-600 dark:text-purple-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
          </div>
          <p class="text-sm font-medium text-primary-900 dark:text-white">
            {t.services.features.customsExpertise}
          </p>
        </div>
        <div class="text-center p-4">
          <div
            class="w-12 h-12 mx-auto bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center mb-3"
          >
            <svg
              class="w-6 h-6 text-orange-600 dark:text-orange-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <p class="text-sm font-medium text-primary-900 dark:text-white">
            {t.services.features.dedicatedSupport}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-primary-900">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        {t.services.cta.title}
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto mb-8">
        {t.services.cta.description}
      </p>
      <a href={localizedHref('/contact')} class="btn-accent btn-lg"
        >{t.services.cta.button}</a
      >
    </div>
  </section>
</BaseLayout>
