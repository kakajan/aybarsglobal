---
/**
 * Dynamic language route for Vision page
 * Handles: /tr/about/vision, /ar/about/vision, /fa/about/vision, /ru/about/vision
 */
import BaseLayout from '@/layouts/BaseLayout.astro'
import { vision, companyInfo } from '@/data/company'
import {
  type Language,
  supportedLanguages,
  defaultLang,
  getTranslations,
  getLocalizedPath,
} from '@/i18n'

export function getStaticPaths() {
  return supportedLanguages
    .filter((lang) => lang !== defaultLang)
    .map((lang) => ({
      params: { lang },
      props: { lang: lang as Language },
    }))
}

const { lang } = Astro.props
const t = getTranslations(lang)
const localizedHref = (path: string) => getLocalizedPath(path, lang)
---

<BaseLayout
  title={t.about.vision.title}
  description={t.about.vision.description}
  lang={lang}
>
  <!-- Page Header -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <nav
          class="flex items-center space-x-2 rtl:space-x-reverse text-sm text-gray-300 mb-6"
        >
          <a href={localizedHref('/')} class="hover:text-white">{t.nav.home}</a>
          <span>/</span>
          <a href={localizedHref('/about')} class="hover:text-white"
            >{t.nav.about}</a
          >
          <span>/</span>
          <span class="text-accent-400">{t.nav.vision}</span>
        </nav>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.nav.vision}
        </h1>
        <p class="text-xl text-accent-400 font-medium">
          {t.about.vision.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Vision Content -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none">
          <p
            class="text-xl text-gray-700 dark:text-gray-300 leading-relaxed mb-8"
          >
            {t.about.vision.description}
          </p>

          <div
            class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-800 dark:to-primary-900 rounded-3xl p-8 md:p-10 my-12"
          >
            <h3
              class="text-2xl font-bold text-primary-900 dark:text-white mb-6"
            >
              {t.about.vision.title}
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="flex items-start space-x-4 rtl:space-x-reverse">
                <div
                  class="w-10 h-10 bg-white dark:bg-primary-700 rounded-lg flex items-center justify-center flex-shrink-0 shadow-soft dark:shadow-none"
                >
                  <svg
                    class="w-5 h-5 text-accent-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary-900 dark:text-white">
                    {t.services.features.globalNetwork}
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t.services.whyChoose.globalNetworkDesc}
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4 rtl:space-x-reverse">
                <div
                  class="w-10 h-10 bg-white dark:bg-primary-700 rounded-lg flex items-center justify-center flex-shrink-0 shadow-soft dark:shadow-none"
                >
                  <svg
                    class="w-5 h-5 text-accent-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary-900 dark:text-white">
                    {t.about.values.sustainability}
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t.about.values.sustainabilityDesc}
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4 rtl:space-x-reverse">
                <div
                  class="w-10 h-10 bg-white dark:bg-primary-700 rounded-lg flex items-center justify-center flex-shrink-0 shadow-soft dark:shadow-none"
                >
                  <svg
                    class="w-5 h-5 text-accent-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary-900 dark:text-white">
                    {t.about.values.partnership}
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t.about.values.partnershipDesc}
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4 rtl:space-x-reverse">
                <div
                  class="w-10 h-10 bg-white dark:bg-primary-700 rounded-lg flex items-center justify-center flex-shrink-0 shadow-soft dark:shadow-none"
                >
                  <svg
                    class="w-5 h-5 text-accent-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary-900 dark:text-white">
                    {t.about.values.excellence}
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t.about.values.excellenceDesc}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-primary-900">
    <div class="container-custom text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        {t.sections.cta.title}
        <span class="text-accent-400">{t.sections.cta.titleHighlight}</span>
      </h2>
      <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
        {t.sections.cta.description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={localizedHref('/contact')} class="btn-accent">
          {t.sections.cta.primary}
        </a>
        <a href={localizedHref('/services')} class="btn-outline-light">
          {t.sections.cta.secondary}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
