---
/**
 * Dynamic language route for About page
 * Handles: /tr/about, /ar/about, /fa/about, /ru/about
 */
import BaseLayout from '@/layouts/BaseLayout.astro'
import CTASection from '@/components/home/CTASection.astro'
import { companyInfo, vision, mission, coreValues } from '@/data/company'
import {
  type Language,
  supportedLanguages,
  defaultLang,
  getTranslations,
} from '@/i18n'

export function getStaticPaths() {
  return supportedLanguages
    .filter((lang) => lang !== defaultLang)
    .map((lang) => ({
      params: { lang },
      props: { lang: lang as Language },
    }))
}

const { lang } = Astro.props
const t = getTranslations(lang)
---

<BaseLayout
  title={t.about.pageTitle}
  description={t.about.pageDescription}
  lang={lang}
>
  <!-- Page Header -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-accent-400 text-sm font-medium mb-6"
        >
          {t.about.hero.badge}
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.about.hero.title}
        </h1>
        <p class="text-xl text-gray-300">
          {t.about.hero.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Company Story -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div
        class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center"
      >
        <div>
          <span class="section-subtitle">{t.about.story.subtitle}</span>
          <h2
            class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-6"
          >
            {t.about.story.title}
          </h2>
          <div class="space-y-4 text-gray-600 dark:text-gray-400">
            <p>{t.about.story.description1}</p>
            <p>{t.about.story.description2}</p>
            <p>{t.about.story.description3}</p>
          </div>
        </div>

        <!-- Stats Card -->
        <div class="relative">
          <div
            class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-800 dark:to-primary-900 rounded-3xl p-8 md:p-10"
          >
            <div class="grid grid-cols-2 gap-6">
              <div
                class="text-center p-4 bg-white dark:bg-primary-800 rounded-2xl shadow-soft dark:shadow-none dark:border dark:border-primary-700"
              >
                <div
                  class="text-3xl md:text-4xl font-bold text-accent-500 ltr-nums"
                >
                  30+
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                  {t.about.stats.yearsExperience}
                </div>
              </div>
              <div
                class="text-center p-4 bg-white dark:bg-primary-800 rounded-2xl shadow-soft dark:shadow-none dark:border dark:border-primary-700"
              >
                <div
                  class="text-3xl md:text-4xl font-bold text-accent-500 ltr-nums"
                >
                  50+
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                  {t.about.stats.countriesServed}
                </div>
              </div>
              <div
                class="text-center p-4 bg-white dark:bg-primary-800 rounded-2xl shadow-soft dark:shadow-none dark:border dark:border-primary-700"
              >
                <div
                  class="text-3xl md:text-4xl font-bold text-accent-500 ltr-nums"
                >
                  200+
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                  {t.about.stats.globalPartners}
                </div>
              </div>
              <div
                class="text-center p-4 bg-white dark:bg-primary-800 rounded-2xl shadow-soft dark:shadow-none dark:border dark:border-primary-700"
              >
                <div
                  class="text-3xl md:text-4xl font-bold text-accent-500 ltr-nums"
                >
                  $500M+
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                  {t.about.stats.annualVolume}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Vision & Mission -->
  <section class="section-padding bg-gray-50 dark:bg-primary-900">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- Vision -->
        <div
          class="bg-white dark:bg-primary-800 rounded-3xl p-8 md:p-10 shadow-soft dark:shadow-none dark:border dark:border-primary-700"
        >
          <div
            class="w-16 h-16 bg-primary-100 dark:bg-primary-700 rounded-2xl flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-primary-600 dark:text-primary-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
              ></path>
            </svg>
          </div>
          <span class="section-subtitle">{t.about.vision.subtitle}</span>
          <h3
            class="text-2xl md:text-3xl font-bold text-primary-900 dark:text-white mb-4"
          >
            {t.about.vision.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.vision.description}
          </p>
        </div>

        <!-- Mission -->
        <div
          class="bg-white dark:bg-primary-800 rounded-3xl p-8 md:p-10 shadow-soft dark:shadow-none dark:border dark:border-primary-700"
        >
          <div
            class="w-16 h-16 bg-accent-100 dark:bg-accent-900/30 rounded-2xl flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-accent-600 dark:text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
              ></path>
            </svg>
          </div>
          <span class="section-subtitle">{t.about.mission.subtitle}</span>
          <h3
            class="text-2xl md:text-3xl font-bold text-primary-900 dark:text-white mb-4"
          >
            {t.about.mission.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.mission.description}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.about.values.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.about.values.title}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
        <!-- Integrity -->
        <div class="card p-6">
          <div
            class="w-12 h-12 bg-primary-100 dark:bg-primary-800 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-primary-600 dark:text-primary-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-primary-900 dark:text-white mb-2">
            {t.about.values.integrity}
          </h4>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.integrityDesc}
          </p>
        </div>

        <!-- Excellence -->
        <div class="card p-6">
          <div
            class="w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-accent-600 dark:text-accent-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-primary-900 dark:text-white mb-2">
            {t.about.values.excellence}
          </h4>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.excellenceDesc}
          </p>
        </div>

        <!-- Reliability -->
        <div class="card p-6">
          <div
            class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-green-600 dark:text-green-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-primary-900 dark:text-white mb-2">
            {t.about.values.reliability}
          </h4>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.reliabilityDesc}
          </p>
        </div>

        <!-- Innovation -->
        <div class="card p-6">
          <div
            class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-blue-600 dark:text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-primary-900 dark:text-white mb-2">
            {t.about.values.innovation}
          </h4>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.innovationDesc}
          </p>
        </div>

        <!-- Sustainability -->
        <div class="card p-6">
          <div
            class="w-12 h-12 bg-emerald-100 dark:bg-emerald-900/30 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-emerald-600 dark:text-emerald-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-primary-900 dark:text-white mb-2">
            {t.about.values.sustainability}
          </h4>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.sustainabilityDesc}
          </p>
        </div>

        <!-- Partnership -->
        <div class="card p-6">
          <div
            class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-purple-600 dark:text-purple-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-primary-900 dark:text-white mb-2">
            {t.about.values.partnership}
          </h4>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.partnershipDesc}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection lang={lang} />
</BaseLayout>
