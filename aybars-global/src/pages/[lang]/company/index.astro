---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CTASection from '@/components/home/CTASection.astro'
import { companyInfo } from '@/data/company'
import {
  type Language,
  supportedLanguages,
  defaultLang,
  getTranslations,
} from '@/i18n'

export function getStaticPaths() {
  return supportedLanguages
    .filter((lang) => lang !== defaultLang)
    .map((lang) => ({
      params: { lang },
      props: { lang: lang as Language },
    }))
}

const { lang } = Astro.props
const t = getTranslations(lang)
---

<BaseLayout
  title={t.company.pageTitle}
  description={t.company.pageDescription}
  lang={lang}
>
  <!-- Hero Section -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-accent-400 text-sm font-medium mb-6"
        >
          {t.company.hero.badge}
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.company.hero.title}
        </h1>
        <p class="text-xl text-gray-300">{t.company.hero.tagline}</p>
      </div>
    </div>
  </section>

  <!-- Company Overview -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <span class="section-subtitle">{t.company.overview.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-8"
        >
          {t.company.overview.title}
        </h2>
        <div class="prose prose-lg dark:prose-invert mx-auto">
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.story.description1}
          </p>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.story.description2}
          </p>
        </div>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16">
        <div class="text-center">
          <div
            class="text-4xl md:text-5xl font-bold text-accent-500 mb-2 ltr-nums"
          >
            30+
          </div>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.stats.yearsExperience}
          </p>
        </div>
        <div class="text-center">
          <div
            class="text-4xl md:text-5xl font-bold text-accent-500 mb-2 ltr-nums"
          >
            50+
          </div>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.stats.countriesServed}
          </p>
        </div>
        <div class="text-center">
          <div
            class="text-4xl md:text-5xl font-bold text-accent-500 mb-2 ltr-nums"
          >
            200+
          </div>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.stats.globalPartners}
          </p>
        </div>
        <div class="text-center">
          <div
            class="text-4xl md:text-5xl font-bold text-accent-500 mb-2 ltr-nums"
          >
            $500M+
          </div>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.stats.annualVolume}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="section-padding bg-gray-50 dark:bg-primary-900">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.company.timeline.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.company.timeline.title}
        </h2>
      </div>

      <div class="max-w-3xl mx-auto mt-12">
        {
          t.company.timeline.events.map((item: any) => (
            <div class="timeline-item">
              <div class="timeline-dot" />
              <div class="card p-6 ms-4">
                <span class="text-accent-500 font-semibold ltr-nums">
                  {item.year}
                </span>
                <h4 class="text-xl font-bold text-primary-900 dark:text-white mt-2">
                  {item.title}
                </h4>
                <p class="text-gray-600 dark:text-gray-400 mt-2">
                  {item.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.company.presence.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.company.presence.title}
        </h2>
      </div>

      <div class="max-w-2xl mx-auto mt-12">
        <div class="card p-8 text-center">
          <div
            class="w-16 h-16 mx-auto bg-primary-100 dark:bg-primary-800 rounded-2xl flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-primary-600 dark:text-primary-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary-900 dark:text-white mb-4">
            Istanbul, Turkey
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            {companyInfo.contact.address.street}<br />
            {companyInfo.contact.address.city}, {
              companyInfo.contact.address.region
            }
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={`tel:${companyInfo.contact.phones[0]}`}
              class="btn-secondary"
            >
              <svg
                class="w-5 h-5 me-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              {t.contact.info.phone}
            </a>
            <a
              href={`mailto:${companyInfo.contact.emails[0]}`}
              class="btn-primary"
            >
              <svg
                class="w-5 h-5 me-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              {t.contact.info.email}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection lang={lang} />
</BaseLayout>
