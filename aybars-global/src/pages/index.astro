---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Hero from '@/components/home/Hero.astro'
import ServiceCards from '@/components/home/ServiceCards.astro'
import CoreSectors from '@/components/home/CoreSectors.astro'
import AboutSection from '@/components/home/AboutSection.astro'
import CTASection from '@/components/home/CTASection.astro'
import { defaultLang, getTranslations } from '@/i18n'

const lang = defaultLang
const t = getTranslations(lang)
---

<BaseLayout
  title={t.meta.siteName}
  description={t.meta.siteDescription}
  jsonLdType="Organization"
  lang={lang}
>
  <!-- Hero Section -->
  <Hero lang={lang} />

  <!-- Transport Services Cards -->
  <ServiceCards lang={lang} />

  <!-- Core Sectors (Logistics, Grain, Metals) -->
  <CoreSectors lang={lang} />

  <!-- About Company Section -->
  <AboutSection lang={lang} />

  <!-- Features/Why Choose Us -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.home.whyChoose.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.home.whyChoose.title}
        </h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          {t.home.whyChoose.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
        <!-- Feature 1 -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-primary-100 dark:bg-primary-800 rounded-xl flex items-center justify-center mb-5 group-hover:bg-primary-900 dark:group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.qualityAssurance}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.excellenceDesc}
          </p>
        </div>

        <!-- Feature 2 -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-accent-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.timelyDelivery}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.reliabilityDesc}
          </p>
        </div>

        <!-- Feature 3 -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-success-100 dark:bg-success-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-success-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-success-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.globalNetwork}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.innovationDesc}
          </p>
        </div>

        <!-- Feature 4 -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-primary-100 dark:bg-primary-800 rounded-xl flex items-center justify-center mb-5 group-hover:bg-primary-900 dark:group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.competitivePricing}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.integrityDesc}
          </p>
        </div>

        <!-- Feature 5 -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-accent-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-accent-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.dedicatedSupport}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.partnershipDesc}
          </p>
        </div>

        <!-- Feature 6 -->
        <div
          class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300 dark:bg-primary-900"
        >
          <div
            class="w-14 h-14 bg-success-100 dark:bg-success-900/30 rounded-xl flex items-center justify-center mb-5 group-hover:bg-success-500 transition-colors"
          >
            <svg
              class="w-7 h-7 text-success-600 group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3">
            {t.services.features.customsExpertise}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t.about.values.excellenceDesc}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection lang={lang} />
</BaseLayout>
