---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CTASection from '@/components/home/CTASection.astro'
import { defaultLang, getTranslations, getLocalizedPath } from '@/i18n'

const lang = defaultLang
const t = getTranslations(lang)

// Get services from translations
const mainServices = t.services.mainServicesData
const transportServices = t.services.transportServicesData
---

<BaseLayout
  title={t.services.pageTitle}
  description={t.services.pageDescription}
>
  <!-- Page Header -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-accent-400 text-sm font-medium mb-6"
        >
          {t.services.hero.badge}
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.services.hero.title}
        </h1>
        <p class="text-xl text-gray-300">
          {t.services.hero.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Main Services -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.services.mainServices.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.services.mainServices.title}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
        {
          mainServices.map((service, index) => (
            <a
              href={getLocalizedPath(`/services/${service.slug}`, lang)}
              class="group card p-8 text-center hover:shadow-xl"
            >
              <div
                class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-primary-100 to-accent-50 dark:from-primary-700 dark:to-accent-900/50 rounded-2xl 
                        flex items-center justify-center group-hover:from-primary-900 group-hover:to-accent-500 transition-all duration-300"
              >
                <span class="text-3xl font-bold text-primary-600 dark:text-accent-400 group-hover:text-white transition-colors">
                  0{index + 1}
                </span>
              </div>

              <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-3 group-hover:text-accent-500 transition-colors">
                {service.shortTitle}
              </h3>

              <p class="text-gray-600 dark:text-gray-400 mb-6">
                {service.description}
              </p>

              <span class="inline-flex items-center text-accent-500 font-medium">
                {t.services.mainServices.learnMore}
                <svg
                  class="w-4 h-4 ms-2 group-hover:translate-x-2 rtl:group-hover:-translate-x-2 rtl:rotate-180 transition-transform"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Transportation Services -->
  <section class="section-padding bg-gray-50 dark:bg-primary-900">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.services.transport.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.services.transport.title}
        </h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          {t.services.transport.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
        {
          transportServices.map((service) => (
            <div class="card p-6 group">
              <div
                class="aspect-video bg-gradient-to-br from-primary-100 to-primary-50 dark:from-primary-700 dark:to-primary-800 rounded-xl mb-6 
                        flex items-center justify-center group-hover:from-primary-900 group-hover:to-primary-700 transition-all duration-300"
              >
                <svg
                  class="w-16 h-16 text-primary-600 dark:text-white group-hover:text-white transition-colors"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  {service.icon === 'truck' && (
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0zM13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
                    />
                  )}
                  {service.icon === 'plane' && (
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"
                    />
                  )}
                  {service.icon === 'ship' && (
                    <>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M3 17h18M5 17l-2 4M19 17l2 4M12 3v10M7 8h10l-2 9H9L7 8z"
                      />
                    </>
                  )}
                </svg>
              </div>

              <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-2 group-hover:text-accent-500 transition-colors">
                {service.title}
              </h3>

              <p class="text-accent-500 font-medium text-sm mb-3">
                {service.description}
              </p>

              <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-2">
                {service.features.slice(0, 4).map((feature) => (
                  <li class="flex items-center">
                    <svg
                      class="w-4 h-4 text-success-500 mr-2 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Why Choose Our Services -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="section-subtitle">{t.services.whyChoose.subtitle}</span>
          <h2
            class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-6"
          >
            {t.services.whyChoose.title}
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-8">
            {t.services.whyChoose.description}
          </p>

          <div class="space-y-4">
            <div class="flex items-start gap-4 rtl:gap-4">
              <div
                class="w-10 h-10 bg-success-100 dark:bg-success-900/30 rounded-lg flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-success-600 dark:text-success-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-900 dark:text-white">
                  {t.services.whyChoose.qualityAssurance}
                </h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {t.services.whyChoose.qualityAssuranceDesc}
                </p>
              </div>
            </div>
            <div class="flex items-start gap-4 rtl:gap-4">
              <div
                class="w-10 h-10 bg-success-100 dark:bg-success-900/30 rounded-lg flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-success-600 dark:text-success-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-900 dark:text-white">
                  {t.services.whyChoose.competitivePricing}
                </h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {t.services.whyChoose.competitivePricingDesc}
                </p>
              </div>
            </div>
            <div class="flex items-start gap-4 rtl:gap-4">
              <div
                class="w-10 h-10 bg-success-100 dark:bg-success-900/30 rounded-lg flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-success-600 dark:text-success-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-900 dark:text-white">
                  {t.services.whyChoose.onTimeDelivery}
                </h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {t.services.whyChoose.onTimeDeliveryDesc}
                </p>
              </div>
            </div>
            <div class="flex items-start gap-4 rtl:gap-4">
              <div
                class="w-10 h-10 bg-success-100 dark:bg-success-900/30 rounded-lg flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-success-600 dark:text-success-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-primary-900 dark:text-white">
                  {t.services.whyChoose.globalNetwork}
                </h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {t.services.whyChoose.globalNetworkDesc}
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="relative">
          <div
            class="bg-gradient-to-br from-primary-100 to-accent-50 dark:from-primary-800 dark:to-primary-900 rounded-3xl p-8 md:p-12"
          >
            <div class="text-center">
              <div
                class="text-6xl font-bold text-primary-900 dark:text-white mb-2"
              >
                30+
              </div>
              <div class="text-gray-600 dark:text-gray-400 mb-6">
                {t.services.whyChoose.yearsExcellence}
              </div>

              <div
                class="grid grid-cols-2 gap-4 pt-6 border-t border-gray-200 dark:border-primary-700"
              >
                <div>
                  <div class="text-3xl font-bold text-accent-500">50+</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    {t.services.whyChoose.countries}
                  </div>
                </div>
                <div>
                  <div class="text-3xl font-bold text-accent-500">10K+</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    {t.services.whyChoose.shipments}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection lang={lang} />
</BaseLayout>
