---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CTASection from '@/components/home/CTASection.astro'
import { mainServices } from '@/data/services'

const service = mainServices.find((s) => s.slug === 'grain-supply')!

const grainTypes = [
  {
    name: 'Wheat',
    description:
      'Premium quality wheat varieties for food production and processing',
    icon: 'ðŸŒ¾',
  },
  {
    name: 'Corn',
    description:
      'High-grade corn for animal feed, food processing, and industrial use',
    icon: 'ðŸŒ½',
  },
  {
    name: 'Barley',
    description: 'Quality barley for brewing, animal feed, and food industries',
    icon: 'ðŸŒ¿',
  },
  {
    name: 'Soybeans',
    description:
      'Non-GMO and conventional soybeans for oil and meal production',
    icon: 'ðŸ«˜',
  },
]
---

<BaseLayout
  title="Grain Procurement & Supply Services"
  description="AYBARS GLOBAL specializes in wheat, corn, barley, and soybean procurement. Premium grain supply with quality assurance and competitive pricing."
>
  <!-- Page Header -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-success-900 via-success-800 to-success-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <nav class="flex items-center gap-2 text-sm text-gray-300 mb-6">
          <a href="/" class="hover:text-white">Home</a>
          <span>/</span>
          <a href="/services" class="hover:text-white">Services</a>
          <span>/</span>
          <span class="text-accent-400">Grain Supply</span>
        </nav>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {service.title}
        </h1>
        <p class="text-xl text-gray-300">
          Premium grains sourced from reputable international producers
        </p>
      </div>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="section-subtitle">Strategic Food Materials Sourcing</span
          >
          <h2
            class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-6"
          >
            Quality Grain, Global Supply
          </h2>
          <div
            class="prose prose-lg text-gray-600 dark:text-gray-400 space-y-4"
          >
            <p>
              Aybar Global specializes in the procurement and supply of various
              grains, including wheat, corn, barley, and soybeans, through an
              extensive network of international suppliers.
            </p>
            <p>
              With a strong focus on quality, competitive pricing, and timely
              delivery, we ensure that our clients' needs are met in both
              domestic and global markets.
            </p>
            <p>
              Our expert team closely monitors every stage of the process â€” from
              sourcing and transportation to customs clearance â€” guaranteeing
              the authenticity, safety, and standard compliance of all products.
            </p>
          </div>
        </div>

        <!-- Visual -->
        <div class="relative">
          <div
            class="bg-gradient-to-br from-success-100 to-accent-50 dark:from-success-900/30 dark:to-primary-900 rounded-3xl p-8 md:p-10"
          >
            <div
              class="w-20 h-20 bg-success-600 rounded-2xl flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-10 h-10 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                ></path>
              </svg>
            </div>
            <h3
              class="text-2xl font-bold text-primary-900 dark:text-white text-center mb-4"
            >
              Quality Assured
            </h3>
            <p class="text-center text-gray-600 dark:text-gray-400">
              Every shipment meets international quality standards and safety
              requirements
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Grain Types -->
  <section class="section-padding bg-gray-50 dark:bg-primary-900">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">Our Products</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          Premium Grain Selection
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-12">
        {
          grainTypes.map((grain) => (
            <div class="card p-6 text-center group hover:shadow-xl">
              <div class="text-5xl mb-4">{grain.icon}</div>
              <h3 class="text-xl font-bold text-primary-900 dark:text-white mb-2">
                {grain.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">
                {grain.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">Our Promise</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          What Sets Us Apart
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-12">
        {
          service.features.map((feature, index) => (
            <div class="p-6 border border-gray-100 dark:border-primary-700 dark:bg-primary-800 rounded-2xl hover:border-success-200 dark:hover:border-success-600 hover:shadow-lg transition-all">
              <div class="w-10 h-10 bg-success-100 dark:bg-success-900/30 rounded-lg flex items-center justify-center mb-4">
                <span class="font-bold text-success-600 dark:text-success-400">
                  {String(index + 1).padStart(2, '0')}
                </span>
              </div>
              <h4 class="font-semibold text-primary-900 dark:text-white mb-2">
                {feature}
              </h4>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Industries Served -->
  <section class="section-padding bg-success-900">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span
          class="text-success-300 font-semibold uppercase tracking-wider text-sm"
          >Industries We Serve</span
        >
        <h2 class="text-3xl md:text-4xl font-bold text-white mt-3">
          Building Reliable Supply Chains
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
          <div
            class="w-14 h-14 bg-white/20 rounded-xl flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-7 h-7 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Food Industry</h3>
          <p class="text-success-200 text-sm">
            Flour mills, bakeries, and food manufacturers
          </p>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
          <div
            class="w-14 h-14 bg-white/20 rounded-xl flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-7 h-7 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Livestock Industry</h3>
          <p class="text-success-200 text-sm">
            Animal feed producers and farms
          </p>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
          <div
            class="w-14 h-14 bg-white/20 rounded-xl flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-7 h-7 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Commercial Trade</h3>
          <p class="text-success-200 text-sm">
            Traders, distributors, and exporters
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection />
</BaseLayout>
