---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CTASection from '@/components/home/CTASection.astro'
import { companyInfo, coreValues } from '@/data/company'
import { defaultLang, getTranslations } from '@/i18n'

const lang = defaultLang
const t = getTranslations(lang)
---

<BaseLayout
  title={t.about.pageTitle}
  description={t.about.pageDescription}
  lang={lang}
>
  <!-- Page Header -->
  <section
    class="relative py-20 md:py-28 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"
  >
    <div class="absolute inset-0 bg-pattern opacity-5"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-accent-400 text-sm font-medium mb-6"
        >
          {t.about.hero.badge}
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {t.about.hero.title}
        </h1>
        <p class="text-xl text-gray-300">
          {t.about.hero.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Company Story -->
  <section
    class="relative section-padding bg-white/5 dark:bg-primary-950/5 overflow-hidden"
  >
    <!-- Parallax Background -->
    <div
      class="absolute inset-0 bg-cover bg-center bg-no-repeat -z-10"
      style="background-image: url('/images/SkyLand-blue.webp'); background-attachment: fixed; opacity: 0.15;"
    >
    </div>
    <div class="container-custom">
      <div
        class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center"
      >
        <div>
          <span class="section-subtitle">{t.about.story.subtitle}</span>
          <h2
            class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-6"
          >
            {t.about.story.title}
          </h2>
          <div class="space-y-4 text-gray-600 dark:text-gray-400">
            <p>
              {t.about.story.paragraph1}
            </p>
            <p>
              {t.about.story.paragraph2}
            </p>
            <p>
              {t.about.story.paragraph3}
            </p>
          </div>
        </div>

        <!-- Stats Card -->
        <div class="relative">
          <div
            class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-800 dark:to-primary-900 rounded-3xl p-8 md:p-10"
          >
            <div class="grid grid-cols-2 gap-6">
              {
                companyInfo.stats.map((stat) => (
                  <div class="text-center p-4 bg-white dark:bg-primary-800 rounded-2xl shadow-soft dark:shadow-none dark:border dark:border-primary-700">
                    <div class="text-3xl md:text-4xl font-bold text-accent-500">
                      {stat.number}
                    </div>
                    <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                      {stat.label}
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Vision & Mission -->
  <section class="section-padding bg-gray-50 dark:bg-primary-900">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- Vision -->
        <div
          class="bg-white dark:bg-primary-800 rounded-3xl p-8 md:p-10 shadow-soft dark:shadow-none dark:border dark:border-primary-700"
        >
          <div
            class="w-16 h-16 bg-primary-100 dark:bg-primary-700 rounded-2xl flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary-900 dark:text-white mb-4">
            {t.about.vision.title}
          </h3>
          <p class="text-accent-500 font-medium mb-4">
            {t.about.vision.subtitle}
          </p>
          <div
            class="text-gray-600 dark:text-gray-400 space-y-3 whitespace-pre-line"
          >
            {t.about.vision.description}
          </div>
        </div>

        <!-- Mission -->
        <div
          class="bg-white dark:bg-primary-800 rounded-3xl p-8 md:p-10 shadow-soft dark:shadow-none dark:border dark:border-primary-700"
        >
          <div
            class="w-16 h-16 bg-accent-100 dark:bg-accent-900/30 rounded-2xl flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-accent-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary-900 dark:text-white mb-4">
            {t.about.mission.title}
          </h3>
          <p class="text-accent-500 font-medium mb-4">
            {t.about.mission.subtitle}
          </p>
          <div
            class="text-gray-600 dark:text-gray-400 space-y-3 whitespace-pre-line"
          >
            {t.about.mission.description}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="section-padding bg-white dark:bg-primary-950">
    <div class="container-custom">
      <div class="section-title">
        <span class="section-subtitle">{t.about.values.subtitle}</span>
        <h2
          class="text-3xl md:text-4xl font-bold text-primary-900 dark:text-white mb-4"
        >
          {t.about.values.title}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
        {
          coreValues.map((value, index) => (
            <div class="group p-6 rounded-2xl border border-gray-100 dark:border-primary-700 dark:bg-primary-900 hover:border-accent-200 dark:hover:border-accent-500/50 hover:shadow-lg dark:hover:shadow-accent-500/10 transition-all duration-300">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-100 to-accent-100 dark:from-primary-700 dark:to-accent-900/50 rounded-xl flex items-center justify-center mb-4 group-hover:from-primary-900 group-hover:to-accent-500 transition-all">
                <span class="text-lg font-bold text-primary-600 dark:text-accent-400 group-hover:text-white transition-colors">
                  {String(index + 1).padStart(2, '0')}
                </span>
              </div>
              <h4 class="text-lg font-bold text-primary-900 dark:text-white mb-2">
                {value.title}
              </h4>
              <p class="text-gray-600 dark:text-gray-400 text-sm">
                {value.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection lang={lang} />
</BaseLayout>
